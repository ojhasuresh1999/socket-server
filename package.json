{
  "name": "portfolio-socket-server",
  "version": "1.0.0",
  "description": "Standalone Socket.IO server for portfolio chat",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "postinstall": "node -e \"if (process.env.RENDER) { console.log('Building for Render...'); require('child_process').execSync('pnpm build', {stdio: 'inherit'}) }\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.5",
    "socket.io": "^4.8.3",
    "zod": "^3.25.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.23",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
